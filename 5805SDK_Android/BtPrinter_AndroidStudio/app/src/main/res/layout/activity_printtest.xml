<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_msg"
            android:layout_width="198dp"
            android:layout_height="50dp"
            android:layout_weight="0.60"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_connect" />

            <Button
                android:id="@+id/button_relink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_relink" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_printer"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/editText_input"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="0.84"
                android:ems="10"
                android:inputType="textMultiLine" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/button_checkstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/checkedTextView_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_printlabel" />

            <Spinner
                android:id="@+id/spinner_language"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50" />

            <Spinner
                android:id="@+id/spinner_imagetype"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.59" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_printtext"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:text="@string/str_printword" />

            <Button
                android:id="@+id/button_printunicode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:text="@string/str_printunicode" />

            <Button
                android:id="@+id/button_printimage"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:text="@string/str_printimg" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_printbarcode"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:text="@string/str_printbarcode" />

                <Button
                    android:id="@+id/button_printqrcode"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:text="@string/str_printqrcode" />

                <Button
                    android:id="@+id/button_printticket"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:text="@string/str_printticket" />

            </LinearLayout>

            <ListView
                android:id="@+id/listView_cmd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>

        </LinearLayout>
</LinearLayout>
